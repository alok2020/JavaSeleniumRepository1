<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="BrowserStack Test Suite" parallel="tests" thread-count="5">
    <!-- Windows Chrome -->
    <test name="Windows Chrome">
        <parameter name="browser" value="Chrome"/>
        <parameter name="os" value="Windows"/>
        <parameter name="osVersion" value="11"/>
        <classes>
            <class name="com.translator.ElPaisBrowserStackTest"/>
        </classes>
    </test>

    <!-- Windows Firefox -->
    <test name="Windows Firefox">
        <parameter name="browser" value="Firefox"/>
        <parameter name="os" value="Windows"/>
        <parameter name="osVersion" value="11"/>
        <classes>
            <class name="com.translator.ElPaisBrowserStackTest"/>
        </classes>
    </test>

    <!-- Mac Safari -->
    <test name="Mac Safari">
        <parameter name="browser" value="Safari"/>
        <parameter name="os" value="OS X"/>
        <parameter name="osVersion" value="Monterey"/>
        <classes>
            <class name="com.translator.ElPaisBrowserStackTest"/>
        </classes>
    </test>
</suite>